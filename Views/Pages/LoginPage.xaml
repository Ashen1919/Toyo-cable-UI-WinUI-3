<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Toyo_cable_UI.Views.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Toyo_cable_UI.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RequestedTheme="Light">
        <!--  Define 2 columns  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--  LEFT SIDE  -->
        <Grid Grid.Column="0" Background="White">
            <Image
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Assets/login_vector.png"
                Stretch="Uniform" />
        </Grid>

        <!--  RIGHT SIDE  -->
        <Grid Grid.Column="1" Background="#E5F1FF">
            <Grid
                Padding="20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">

                <StackPanel Spacing="15">

                    <!--  Title  -->
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontSize="30"
                        FontWeight="Bold"
                        Foreground="Black"
                        Text="Welcome" />

                    <!--  Username  -->
                    <TextBox
                        x:Name="emailTextBox"
                        Height="45"
                        AcceptsReturn="False"
                        CornerRadius="8"
                        Foreground="Black"
                        PlaceholderText="Enter your Email"
                        TextChanged="InputTextBox_TextChanged" />

                    <!--  Password  -->
                    <PasswordBox
                        x:Name="passwordBox"
                        Height="45"
                        CornerRadius="8"
                        KeyDown="PasswordBox_KeyDown"
                        PasswordChanged="InputTextBox_TextChanged"
                        PlaceholderText="Enter your Password" />

                    <!--  Error Message  -->
                    <InfoBar
                        x:Name="ErrorInfoBar"
                        IsClosable="False"
                        IsOpen="False"
                        Severity="Error" />

                    <!--  Login Button  -->
                    <Button
                        x:Name="LoginButton"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        Click="LoginButton_Click"
                        Content="Login"
                        FontSize="18"
                        FontWeight="Bold"
                        IsEnabled="False"
                        Style="{StaticResource AccentButtonStyle}" />

                    <!--  Loading Indicator  -->
                    <StackPanel
                        x:Name="LoadingPanel"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8"
                        Visibility="Collapsed">
                        <ProgressRing
                            Width="20"
                            Height="20"
                            IsActive="True" />
                        <TextBlock VerticalAlignment="Center" Text="Logging in..." />
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
