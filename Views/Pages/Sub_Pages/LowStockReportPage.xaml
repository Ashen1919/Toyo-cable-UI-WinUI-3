<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Toyo_cable_UI.Views.Pages.Sub_Pages.LowStockReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Toyo_cable_UI.Views.Pages.Sub_Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#F5F7FA" RequestedTheme="Light">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <Grid
            Grid.Row="0"
            Padding="30,20"
            Background="White"
            CornerRadius="0,0,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Foreground="#1A1A2E"
                    Text="Low Stock Alert Report" />
                <TextBlock
                    Margin="0,4,0,0"
                    FontSize="14"
                    Foreground="#6B7280"
                    Text="Track your low stock products here" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="12">
                <ComboBox
                    Width="160"
                    Header="Status"
                    PlaceholderText="All State">
                    <ComboBoxItem Content="All State" IsSelected="True" />
                    <ComboBoxItem Content="Critical" />
                    <ComboBoxItem Content="Low Stock" />
                </ComboBox>
                <Button
                    Padding="16,8"
                    Content="Generate Report"
                    CornerRadius="6"
                    Foreground="White"
                    Style="{StaticResource AccentButtonStyle}" />
            </StackPanel>
        </Grid>

        <!--  Main Content  -->
        <ScrollViewer Grid.Row="1" Padding="30,20">
            <StackPanel Spacing="20">

                <!--  Alert Summary Cards  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Critical Stock Card  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        Padding="20"
                        Background="White"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border
                                    Width="40"
                                    Height="40"
                                    Background="#FEE2E2"
                                    CornerRadius="8">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="âš ï¸" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#6B7280"
                                        Text="CRITICAL" />
                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#DC2626"
                                        Text="12" />
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                Margin="0,12,0,0"
                                FontSize="13"
                                Foreground="#9CA3AF"
                                Text="Below 10 units" />
                        </StackPanel>
                    </Border>

                    <!--  Low Stock Card  -->
                    <Border
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        Padding="20"
                        Background="White"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border
                                    Width="40"
                                    Height="40"
                                    Background="#FEF3C7"
                                    CornerRadius="8">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="ðŸ“¦" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#6B7280"
                                        Text="LOW STOCK" />
                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#F59E0B"
                                        Text="28" />
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                Margin="0,12,0,0"
                                FontSize="13"
                                Foreground="#9CA3AF"
                                Text="10-50 units" />
                        </StackPanel>
                    </Border>

                    <!--  Total Products Card  -->
                    <Border
                        Grid.Column="2"
                        Padding="20"
                        Background="White"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border
                                    Width="40"
                                    Height="40"
                                    Background="#DBEAFE"
                                    CornerRadius="8">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="ðŸ“Š" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#6B7280"
                                        Text="TOTAL ITEMS" />
                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#3B82F6"
                                        Text="40" />
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                Margin="0,12,0,0"
                                FontSize="13"
                                Foreground="#9CA3AF"
                                Text="Need attention" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  Low Stock Products Table  -->
                <Border
                    Padding="24"
                    Background="White"
                    CornerRadius="12">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#1A1A2E"
                                Text="Products Requiring Restock" />
                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBox
                                    Width="250"
                                    BorderBrush="#E5E7EB"
                                    PlaceholderText="Search products..." />
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Table Header  -->
                            <Border
                                Grid.Row="0"
                                Padding="16,12"
                                Background="#F9FAFB"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#6B7280"
                                        Text="PRODUCT NAME" />
                                    <TextBlock
                                        Grid.Column="1"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#6B7280"
                                        Text="CATEGORY" />
                                    <TextBlock
                                        Grid.Column="2"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#6B7280"
                                        Text="CURRENT STOCK" />
                                    <TextBlock
                                        Grid.Column="3"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#6B7280"
                                        Text="REORDER LEVEL" />
                                    <TextBlock
                                        Grid.Column="4"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#6B7280"
                                        Text="STATUS" />
                                </Grid>
                            </Border>

                            <!--  Table Rows  -->
                            <StackPanel Grid.Row="1" Margin="0,8,0,0">
                                <!--  Critical Item 1  -->
                                <Border
                                    Padding="16,12"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="#1A1A2E"
                                            Text="Cable Wire 2.5mm" />
                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="Cables" />
                                        <TextBlock
                                            Grid.Column="2"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#DC2626"
                                            Text="5 units" />
                                        <TextBlock
                                            Grid.Column="3"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="50 units" />
                                        <Border
                                            Grid.Column="4"
                                            Width="80"
                                            Padding="8,4"
                                            HorizontalAlignment="Left"
                                            Background="#FEE2E2"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="#DC2626"
                                                Text="Critical"
                                                TextAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Border>

                                <!--  Critical Item 2  -->
                                <Border
                                    Padding="16,12"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="#1A1A2E"
                                            Text="Circuit Breaker 20A" />
                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="Switches" />
                                        <TextBlock
                                            Grid.Column="2"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#DC2626"
                                            Text="8 units" />
                                        <TextBlock
                                            Grid.Column="3"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="30 units" />
                                        <Border
                                            Grid.Column="4"
                                            Width="80"
                                            Padding="8,4"
                                            HorizontalAlignment="Left"
                                            Background="#FEE2E2"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="#DC2626"
                                                Text="Critical"
                                                TextAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Border>

                                <!--  Low Stock Item 1  -->
                                <Border
                                    Padding="16,12"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="#1A1A2E"
                                            Text="LED Bulb 9W" />
                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="Bulbs" />
                                        <TextBlock
                                            Grid.Column="2"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#F59E0B"
                                            Text="25 units" />
                                        <TextBlock
                                            Grid.Column="3"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="100 units" />
                                        <Border
                                            Grid.Column="4"
                                            Width="80"
                                            Padding="8,4"
                                            HorizontalAlignment="Left"
                                            Background="#FEF3C7"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="#F59E0B"
                                                Text="Low"
                                                TextAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Border>

                                <!--  Low Stock Item 2  -->
                                <Border
                                    Padding="16,12"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="#1A1A2E"
                                            Text="Power Extension 3m" />
                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="Accessories" />
                                        <TextBlock
                                            Grid.Column="2"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#F59E0B"
                                            Text="35 units" />
                                        <TextBlock
                                            Grid.Column="3"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="80 units" />
                                        <Border
                                            Grid.Column="4"
                                            Width="80"
                                            Padding="8,4"
                                            HorizontalAlignment="Left"
                                            Background="#FEF3C7"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="#F59E0B"
                                                Text="Low"
                                                TextAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Border>

                                <!--  Low Stock Item 3  -->
                                <Border
                                    Padding="16,12"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="#1A1A2E"
                                            Text="Switch Socket 3-Gang" />
                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="Switches" />
                                        <TextBlock
                                            Grid.Column="2"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#F59E0B"
                                            Text="42 units" />
                                        <TextBlock
                                            Grid.Column="3"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="75 units" />
                                        <Border
                                            Grid.Column="4"
                                            Width="80"
                                            Padding="8,4"
                                            HorizontalAlignment="Left"
                                            Background="#FEF3C7"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="#F59E0B"
                                                Text="Low"
                                                TextAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Border>

                                <!--  Low Stock Item 4  -->
                                <Border Padding="16,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="#1A1A2E"
                                            Text="Cable Wire 1.5mm" />
                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="Cables" />
                                        <TextBlock
                                            Grid.Column="2"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#F59E0B"
                                            Text="48 units" />
                                        <TextBlock
                                            Grid.Column="3"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Text="90 units" />
                                        <Border
                                            Grid.Column="4"
                                            Width="80"
                                            Padding="8,4"
                                            HorizontalAlignment="Left"
                                            Background="#FEF3C7"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="#F59E0B"
                                                Text="Low"
                                                TextAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>