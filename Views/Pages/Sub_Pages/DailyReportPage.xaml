<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Toyo_cable_UI.Views.Pages.Sub_Pages.DailyReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ScottPlot="using:ScottPlot.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Toyo_cable_UI.Views.Pages.Sub_Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Toyo_cable_UI.Models"
    mc:Ignorable="d">

    <Grid Background="#F5F7FA" RequestedTheme="Light">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <Grid
            Grid.Row="0"
            Padding="30,20"
            Background="White"
            CornerRadius="0,0,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="#1A1A2E"
                    Text="Daily Sales Report" />
                <TextBlock
                    Margin="0,4,0,0"
                    FontSize="14"
                    Foreground="#6B7280"
                    Text="Track your daily performance and insights" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                Spacing="12">
                <Button
                    Padding="16,8"
                    Background="#10B981"
                    Click="PrintReport_Click"
                    Content="Print Report"
                    CornerRadius="6">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#10B981" />
                        <SolidColorBrush x:Key="ButtonForeground" Color="White" />
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <!--  Main Content  -->
        <ScrollViewer Grid.Row="1" Padding="30,20">
            <StackPanel Spacing="20">

                <!--  Date Section  -->
                <StackPanel
                    Padding="20"
                    Background="White"
                    CornerRadius="0,0,12,12">
                    <TextBlock
                        x:Name="TodayDateText"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#1A1A2E" />
                </StackPanel>

                <!--  Metrics Cards  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Total Sales Card  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        Padding="20"
                        VerticalAlignment="Center"
                        Background="White"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel>
                            <TextBlock
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="#6B7280"
                                Text="TOTAL SALES" />
                            <TextBlock
                                x:Name="DailyTotalRevenueText"
                                Margin="0,8,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#1A1A2E"
                                Text="Rs. 0.00" />
                        </StackPanel>
                    </Border>

                    <!--  Average Sale Card  -->
                    <Border
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        Padding="20"
                        VerticalAlignment="Center"
                        Background="White"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel>
                            <TextBlock
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="#6B7280"
                                Text="AVERAGE SALE" />
                            <TextBlock
                                x:Name="DailyAvgRevenueText"
                                Margin="0,8,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#1A1A2E"
                                Text="Rs. 0.00" />
                        </StackPanel>
                    </Border>

                    <!--  Items Sold Card  -->
                    <Border
                        Grid.Column="2"
                        Padding="20"
                        VerticalAlignment="Center"
                        Background="White"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel>
                            <TextBlock
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="#6B7280"
                                Text="ITEMS SOLD" />
                            <TextBlock
                                x:Name="DailyTotalItemSoldText"
                                Margin="0,8,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#1A1A2E"
                                Text="0" />
                        </StackPanel>
                    </Border>

                    <!--  Items Sold Card  -->
                    <Border
                        Grid.Column="3"
                        Padding="20"
                        VerticalAlignment="Center"
                        Background="White"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel>
                            <TextBlock
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="#6B7280"
                                Text="TOTAL ORDERS" />
                            <TextBlock
                                x:Name="DailyTotalOrdersText"
                                Margin="0,8,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#1A1A2E"
                                Text="0" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  Charts Section  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Sales Trend Chart  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        Padding="24"
                        Background="White"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel>
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#1A1A2E"
                                Text="Daily Sales Trend" />
                            <TextBlock
                                Margin="0,4,0,20"
                                FontSize="13"
                                Foreground="#6B7280"
                                Text="Sales distribution throughout the day" />

                            <!--  Chart Section  -->
                            <ScottPlot:WinUIPlot x:Name="MyPlotControl" Height="350" />
                        </StackPanel>
                    </Border>

                    <!--  Calendar  -->
                    <Border
                        Grid.Column="1"
                        Padding="24"
                        Background="White"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel>
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#1A1A2E"
                                Text="Select Date" />
                            <TextBlock
                                Margin="0,4,0,20"
                                FontSize="13"
                                Foreground="#6B7280"
                                Text="View reports for any day" />

                            <!--  Add SelectedDatesChanged event  -->
                            <CalendarView
                                x:Name="ReportCalendar"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                CalendarItemBackground="Transparent"
                                CalendarItemBorderThickness="0"
                                FirstDayOfWeek="Sunday"
                                IsTodayHighlighted="True"
                                SelectedDatesChanged="ReportCalendar_SelectedDatesChanged"
                                SelectionMode="Single" />

                            <!--  Display selected date  -->
                            <TextBlock
                                x:Name="SelectedDateText"
                                Margin="0,12,0,0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="#3B82F6"
                                Text="No date selected" />

                            <Button
                                x:Name="LoadDateButton"
                                Margin="0,16,0,0"
                                Padding="0,10"
                                HorizontalAlignment="Stretch"
                                Click="LoadDateButton_Click"
                                Content="Load Selected Date"
                                CornerRadius="6"
                                Foreground="White"
                                Style="{StaticResource AccentButtonStyle}" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  Sales Data Table  -->
                <Border
                    Margin="20"
                    Padding="20"
                    Background="White"
                    CornerRadius="12">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="20"
                            FontWeight="Bold"
                            Text="Top Selling Products Today" />

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Table Header  -->
                            <Grid
                                Grid.Row="0"
                                Padding="12"
                                Background="#F8F9FA"
                                CornerRadius="8,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    FontWeight="SemiBold"
                                    Text="Product Name" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontWeight="SemiBold"
                                    Text="Qty Sold"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Grid.Column="2"
                                    FontWeight="SemiBold"
                                    Text="Revenue"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Grid.Column="3"
                                    FontWeight="SemiBold"
                                    Text="Orders"
                                    TextAlignment="Center" />
                            </Grid>

                            <!--  Table Data  -->
                            <ScrollViewer
                                Grid.Row="1"
                                MaxHeight="400"
                                VerticalScrollBarVisibility="Auto">
                                <ItemsRepeater ItemsSource="{x:Bind DailySalesDataList}">
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="models:DailySalesData">
                                            <Border
                                                Padding="12"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1.5*" />
                                                        <ColumnDefinition Width="1*" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        Text="{x:Bind ProductName}"
                                                        TextWrapping="Wrap" />

                                                    <TextBlock
                                                        Grid.Column="1"
                                                        VerticalAlignment="Center"
                                                        FontWeight="SemiBold"
                                                        Text="{x:Bind TotalQuantitySold}"
                                                        TextAlignment="Center" />

                                                    <TextBlock
                                                        Grid.Column="2"
                                                        VerticalAlignment="Center"
                                                        FontWeight="Bold"
                                                        Foreground="#3B82F6"
                                                        TextAlignment="Right">
                                                        <Run Text="Rs. " />
                                                        <Run Text="{x:Bind TotalRevenue}" />
                                                    </TextBlock>

                                                    <TextBlock
                                                        Grid.Column="3"
                                                        VerticalAlignment="Center"
                                                        Text="{x:Bind OrderCount}"
                                                        TextAlignment="Center" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </ScrollViewer>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>