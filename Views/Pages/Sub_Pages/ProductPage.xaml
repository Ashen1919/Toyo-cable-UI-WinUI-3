<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Toyo_cable_UI.Views.Pages.Sub_Pages.ProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Toyo_cable_UI.Views.Pages.Sub_Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RequestedTheme="Light">
        <!--  Define 2 rows  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header section  -->
        <Grid Grid.Row="0" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBlock
                    FontSize="25"
                    FontWeight="Bold"
                    Text="Products" />
            </Grid>

            <Grid Grid.Column="1">
                <TextBox
                    Width="350"
                    HorizontalAlignment="Left"
                    PlaceholderText="Search products here" />
                <Button
                    HorizontalAlignment="Right"
                    Click="addProductBtn_Click"
                    Style="{StaticResource AccentButtonStyle}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,5,0" Symbol="Add" />
                            <TextBlock Text="Add Product" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Margin="20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  DataGrid Container  -->
            <Border
                Grid.Row="1"
                Padding="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Table Header  -->
                        <Grid
                            Grid.Row="0"
                            Padding="16,12"
                            Background="#F8F9FA"
                            BorderBrush="#E0E0E0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Product ID" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Product Name" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Category" />
                            <TextBlock
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Quantity" />
                            <TextBlock
                                Grid.Column="4"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Price" />
                            <TextBlock
                                Grid.Column="5"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Image" />
                            <TextBlock
                                Grid.Column="6"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Actions" />
                        </Grid>

                        <!--  Row 1  -->
                        <Border
                            Grid.Row="1"
                            Padding="16,12"
                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                            BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="PRD001" />
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    FontWeight="Medium"
                                    Text="Accelator Cable" />
                                <Border
                                    Grid.Column="2"
                                    Padding="8,4"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    CornerRadius="4">
                                    <TextBlock Text="Cables" />
                                </Border>
                                <TextBlock
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    Text="45" />
                                <TextBlock
                                    Grid.Column="4"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Text="Rs. 380.00" />
                                <Border
                                    Grid.Column="5"
                                    Width="60"
                                    Height="40"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Background="#E3E3E3"
                                    CornerRadius="4">
                                    <Image
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="/Assets/product1.jpg" />
                                </Border>
                                <StackPanel
                                    Grid.Column="6"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <Button
                                        Padding="12,6"
                                        Content="Edit"
                                        FontSize="12"
                                        Style="{StaticResource AccentButtonStyle}" />
                                    <Button
                                        Padding="12,6"
                                        Content="Delete"
                                        FontSize="12">
                                        <Button.Resources>
                                            <SolidColorBrush x:Key="ButtonBackground" Color="#D13438" />
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#A42327" />
                                            <SolidColorBrush x:Key="ButtonForeground" Color="White" />
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White" />
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
